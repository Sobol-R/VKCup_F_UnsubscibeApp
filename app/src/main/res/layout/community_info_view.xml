<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:paddingBottom="64dp"
        android:background="@drawable/pop_up_view_background"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="61dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:tint="@color/colorIconTint"
                        android:id="@+id/subs_ic"
                        android:src="@drawable/ic_followers_outline_20"
                        android:padding="2.5dp"
                        android:layout_width="27dp"
                        android:layout_height="27dp"/>

                <TextView
                        android:id="@+id/subs_info"
                        android:textColor="@color/colorTextDark"
                        android:textSize="16sp"
                        android:text="188,2K подписчиков · 119 друзей"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@id/subs_ic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/description_content"
                    android:layout_marginTop="12.5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:tint="@color/colorIconTint"
                        android:src="@drawable/ic_article_outline_20"
                        android:id="@+id/article_ic"
                        android:padding="2.5dp"
                        android:layout_width="27dp"
                        android:layout_height="27dp"/>

                <TextView
                        android:id="@+id/article_info"
                        android:textColor="@color/colorTextDark"
                        android:textSize="16sp"
                        android:text="Разрабатываем приложения для вас и ваших друзей с 2011 года."
                        android:layout_marginStart="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="12.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:tint="@color/colorIconTint"
                        android:src="@drawable/ic_newsfeed_outline_20"
                        android:id="@+id/news_ic"
                        android:padding="2.5dp"
                        android:layout_width="27dp"
                        android:layout_height="27dp"/>

                <TextView
                        android:id="@+id/news_info"
                        android:textColor="@color/colorTextDark"
                        android:textSize="16sp"
                        android:text="Последняя запись 8 февраля"
                        android:layout_marginStart="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
            android:background="@drawable/pop_up_view_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/title"
                android:layout_toStartOf="@+id/close_button"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:singleLine="true"
                android:textColor="@color/colorTextDark"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Happy Santa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <FrameLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/close_button"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/close_button_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_margin="2.5dp"
                    android:tint="@color/colorGreyAccent"
                    android:src="@drawable/ic_close_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </FrameLayout>

    </RelativeLayout>


</RelativeLayout>